<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.cyberpwn</groupId>
	<artifactId>CoreTick</artifactId>
	<version>1.0</version>
	<name>CoreTick</name>
	<description>Tick with multiple cores</description>
	<properties>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<ct.libs>${project.basedir}/lib</ct.libs>
		<ct.production.folder>C:\Users\cyberpwn\Documents\development\release\core-tick</ct.production.folder>
		<ct.development.folder>C:\Users\cyberpwn\Documents\development\servers\dynamic\plugins</ct.development.folder>
	</properties>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*.yml</include>
					<include>**/*.txt</include>
				</includes>
			</resource>
		</resources>
	</build>
	<profiles>
		<profile>
			<id>development</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-jar-plugin</artifactId>
						<version>2.3.1</version>
						<configuration>
							<outputDirectory>${ct.development.folder}</outputDirectory>
							<finalName>CoreTick</finalName>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>production</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-jar-plugin</artifactId>
						<version>2.3.1</version>
						<configuration>
							<outputDirectory>${ct.production.folder}</outputDirectory>
							<finalName>CoreTick-${project.version}</finalName>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<dependencies>
		<dependency>
			<groupId>spigot.org</groupId>
			<artifactId>spigot-1.8.8</artifactId>
			<scope>system</scope>
			<systemPath>${ct.libs}/spigot-1.8.8.jar</systemPath>
			<version>1.8.8</version>
		</dependency>
		<dependency>
			<groupId>spigot.org</groupId>
			<artifactId>spigot-1.9.4</artifactId>
			<scope>system</scope>
			<systemPath>${ct.libs}/spigot-1.9.4.jar</systemPath>
			<version>1.9.4</version>
		</dependency>
		
		<dependency>
			<groupId>craftbukkit.org</groupId>
			<artifactId>craftbukkit-1.8.8</artifactId>
			<scope>system</scope>
			<systemPath>${ct.libs}/craftbukkit-1.8.8.jar</systemPath>
			<version>1.8.8</version>
		</dependency>
		<dependency>
			<groupId>craftbukkit.org</groupId>
			<artifactId>craftbukkit-1.9.4</artifactId>
			<scope>system</scope>
			<systemPath>${ct.libs}/craftbukkit-1.9.4.jar</systemPath>
			<version>1.9.4</version>
		</dependency>
		<dependency>
			<groupId>craftbukkit.org</groupId>
			<artifactId>craftbukkit-1.10.2</artifactId>
			<scope>system</scope>
			<systemPath>${ct.libs}/craftbukkit-1.10.2.jar</systemPath>
			<version>1.10.2</version>
		</dependency>
		<dependency>
			<groupId>craftbukkit.org</groupId>
			<artifactId>craftbukkit-1.11.2</artifactId>
			<scope>system</scope>
			<systemPath>${ct.libs}/craftbukkit-1.11.2.jar</systemPath>
			<version>1.11.2</version>
		</dependency>
	</dependencies>
</project>